        <open_questions>
            <question id=... text=...>
        </open_questions>
        <relevant_files>
            <file path=..., reason=...>
        </relevant_files>
        <!-- a sub-phase (We can recognise it's a sub-phase by seeing it's inside a phase element), mention it in a comment
        include in comments the sub-phase number, but do not add it to the xml -->
        <phase id=unique semantic description>
            <description>...</description>
            ... other possible inner phase elements
        </phase>
        <artifacts> # 
            <!-- files that are created/modified in this phase -->
            <artifact path=..., reason_or_desc=...>
        </artifacts>
        <gates> 
            <gate_element id="ids of phases that gate the start of this phase", reason="..">
        </gates>
        <gating>
            <gating_element id="the ids of phases this phase is gating", reason="..">
         </gating>
         <non_goals> 
            <non_goal description="..." future_phase="the phase id that implements this as a goal">
         <non_goals>
        <format> only if relevant <format> 
        <success_criteria>
        <!-- mandatory: either tests that need to pass or decisions (documented in artifacts) that need to be made in order to mark this phase/subphase as completed -->
        </success_criteria>
    </phase>
